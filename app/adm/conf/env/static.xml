<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE env PUBLIC "-//GOYY//DTD ENV 1.0//EN" "http://goyy.org/dtd/env-1.0.dtd">
<configuration>
	<environments default="development">
		<environment id="development">
			<asset name="goyy">
				<enable>true</enable>
				<mappings url="/assets" dir="/app/assets"/>
			</asset>
			<static name="goyy">
				<enable>true</enable>
				<mappings url="/static" dir="static"/>
			</static>
			<developer name="goyy">
				<enable>true</enable>
				<mappings url="/gydev" dir="/app/assets/gydev"/>
			</developer>
			<operation name="goyy">
				<enable>true</enable>
				<mappings url="/gyopr" dir="/app/assets/gyopr"/>
			</operation>
		</environment>
		<environment id="test">
			<asset name="goyy">
				<enable>false</enable>
				<mappings url="http://127.0.0.1:9099" dir="/app/assets"/>
			</asset>
			<static name="goyy">
				<enable>false</enable>
				<mappings url="http://127.0.0.1:9099/gyadm" dir="/app/assets/gyadm"/>
			</static>
			<developer name="goyy">
				<enable>false</enable>
				<mappings url="http://127.0.0.1:9099/gydev" dir="/app/assets/gydev"/>
			</developer>
			<operation name="goyy">
				<enable>false</enable>
				<mappings url="http://127.0.0.1:9099/gyopr" dir="/app/assets/gyopr"/>
			</operation>
		</environment>
		<environment id="production">
			<asset name="goyy">
				<enable>false</enable>
				<mappings url="http://assets.goyy.org" dir="/app/assets"/>
			</asset>
			<static name="goyy">
				<enable>false</enable>
				<mappings url="http://assets.goyy.org/gyadm" dir="/app/assets/gyadm"/>
			</static>
			<developer name="goyy">
				<enable>false</enable>
				<mappings url="http://assets.goyy.org/gydev" dir="/app/assets/gydev"/>
			</developer>
			<operation name="goyy">
				<enable>false</enable>
				<mappings url="http://assets.goyy.org/gyopr" dir="/app/assets/gyopr"/>
			</operation>
		</environment>
	</environments>
</configuration>
