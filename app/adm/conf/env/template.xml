<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE env PUBLIC "-//GOYY//DTD ENV 1.0//EN" "http://goyy.org/dtd/env-1.0.dtd">
<configuration>
	<environments default="development">
		<environment id="development">
			<html name="goyy">
				<enable>true</enable>
				<reloaded>true</reloaded>
				<mappings>
					<mapping path="/sys" dir="../sys/templates/adm"/>
					<mapping path="/example" dir="../example/templates/adm"/>
					<mapping path="/ui" dir="../ui/templates"/>
				</mappings>
			</html>
			<template name="goyy">
				<enable>true</enable>
				<reloaded>true</reloaded>
			</template>
		</environment>
		<environment id="test">
			<html name="goyy">
				<enable>true</enable>
				<reloaded>false</reloaded>
			</html>
			<template name="goyy">
				<enable>true</enable>
				<reloaded>false</reloaded>
			</template>
		</environment>
		<environment id="production">
			<html name="goyy">
				<enable>true</enable>
				<reloaded>false</reloaded>
			</html>
			<template name="goyy">
				<enable>true</enable>
				<reloaded>false</reloaded>
			</template>
		</environment>
	</environments>
</configuration>
